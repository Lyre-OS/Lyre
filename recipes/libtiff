name=libtiff
from_source=libtiff
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs freeglut libjpeg-turbo zlib zstd xz-utils"

configure() {
    ${source_dir}/configure \
        --host=x86_64-lyre \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --enable-shared \
        --without-x \
        --enable-zlib \
        --enable-zstd \
        --enable-jpeg \
        --enable-lzma \
        --disable-webp \
        --enable-cxx
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
