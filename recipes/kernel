name=kernel
from_source=kernel
revision=1
deps="core-libs limine"
hostdeps="gcc binutils"

configure() {
    ${source_dir}/configure \
        FREESTANDING_TOOLCHAIN=x86_64-lyre \
        --prefix=${prefix}
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
